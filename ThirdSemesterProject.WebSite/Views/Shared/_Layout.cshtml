<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ThirdSemesterProject.WebSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ThirdSemesterProject.WebSite.styles.css" asp-append-version="true" />
    <style>
        /* Custom header styles */
        header .navbar {
            background-color: #8b4513; /* Wood brown */
        }

        header .navbar-brand {
            color: #000000; /* Black text */
            font-weight: bold;
            font-size: 1.5rem;
        }

        header .navbar-brand:hover {
            color: #000000; /* Keep black on hover */
        }

        header .nav-link {
            color: #ffffff; /* White text for navigation links */
        }

        header .nav-link:hover {
            color: #f0e6d2; /* Light beige hover for links */
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Outdoor Adventure Shop</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Cart" asp-action="Index">Cart</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Customers" asp-action="Create">Create User</a>
                        </li>
                        <li class="nav-item">
                            @if (Context.User.Identity.IsAuthenticated)
                            {
                                <a class="nav-link" asp-area="" asp-controller="Customers" asp-action="LogOut">Log out</a>
                                <a class="nav-link-account" asp-area="" asp-controller="Customers" asp-action="Details">Account</a>
                            }
                            else
                            {
                                <a class="nav-link" asp-area="" asp-controller="Customers" asp-action="LogIn">Log in</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   
    <br></br>
    <footer class="border-top footer text-muted">
        
        <div class="container">
            &copy; 2024 - ThirdSemesterProject.WebSite - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
