@model IEnumerable<ThirdSemesterProject.APIClient.DTOs.ProductDTO>

@{
    ViewData["Title"] = "Products";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/BaseLayout.css" />
</head>

<h1>Products</h1>

<div class="product-grid">
    @foreach (var item in Model)
    {
            <div class="product-box">
                <h3>@item.Name</h3>
                <p><strong>Size:</strong> @item.Size</p>
                <p><strong>Price:</strong> @item.SalesPrice DKK.</p>
                <p><strong>Stock:</strong> @item.CurrentStock</p>
                <p><strong>Color:</strong> @item.Color</p>
                <div class="action-links">
                    <a class="btn-sm btn-primary" href="@Url.Action("Add", "Cart", new { id = item.ProductId, quantity = 1 })">
                        Add to cart 
                        <span class="bi-cart-plus" style="margin-left:3px;"></span>
                    </a>
                    <a href="@Url.Action("Details", "Products", new { id = item.ProductId })">
                        See More
                    </a>
                </div>
            </div>
    }
</div>