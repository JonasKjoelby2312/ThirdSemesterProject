@model IEnumerable<ThirdSemesterProject.APIClient.DTOs.SaleOrderDTO>

@{
    ViewData["Title"] = "SaleOrders";
}

<h1>SaleOrders</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new {  id=item.SaleOrderId }) |
            </td>
        </tr>
}
    </tbody>
</table>
