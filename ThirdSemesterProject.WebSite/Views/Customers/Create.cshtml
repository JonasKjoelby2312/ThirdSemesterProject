@model ThirdSemesterProject.APIClient.DTOs.CustomerDTO

@{
    ViewData["Title"] = "Create User";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/BaseLayout.css" />
</head>

<h1>Create User</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Customer Information -->
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNO" class="control-label"></label>
                <input asp-for="PhoneNO" class="form-control" required />
                <span asp-validation-for="PhoneNO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <h4>Address</h4>
            <hr />
            <div class="form-group">
                <label asp-for="AddressDTO.RoadName" class="control-label"></label>
                <input asp-for="AddressDTO.RoadName" class="form-control" required />
                <span asp-validation-for="AddressDTO.RoadName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressDTO.HouseNo" class="control-label"></label>
                <input asp-for="AddressDTO.HouseNo" class="form-control" required />
                <span asp-validation-for="AddressDTO.HouseNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressDTO.City" class="control-label"></label>
                <input asp-for="AddressDTO.City" class="form-control" required />
                <span asp-validation-for="AddressDTO.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddressDTO.Zip" class="control-label"></label>
                <input asp-for="AddressDTO.Zip" class="form-control" type="text" inputmode="numeric" required />
                <span asp-validation-for="AddressDTO.Zip" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" asp-controller="Home">Cancel</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}