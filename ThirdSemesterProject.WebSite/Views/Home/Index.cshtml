@model IEnumerable<ThirdSemesterProject.APIClient.DTOs.ProductDTO>

@{
    ViewData["Title"] = "Home Page";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/BaseLayout.css" />
</head>

<div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }
    <div class="product-grid">
        @foreach (var item in Model)
        {
            <div class="product-box">
                <h3>@item.Name</h3>
                <p><strong>Description:</strong> @item.Description</p>
                <p><strong>Size:</strong> @item.Size</p>

                <p><strong>Price:</strong> $@item.SalesPrice</p>
                <div class="action-links">
                    <a href="@Url.Action("Details", "Products", new { id = item.ProductId })" title="View Details">
                        View Details
                    </a>
                </div>
            </div>
        }
    </div>
</div>
