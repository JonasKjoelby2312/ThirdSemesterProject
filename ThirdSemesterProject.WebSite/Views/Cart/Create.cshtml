@model ThirdSemesterProject.WebSite.Models.Cart

@{
    ViewBag.Title = "Check Out";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/css/BaseLayout.css" />
</head>

<h2>Check Out</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@using (Html.BeginForm("Create", "Cart", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    // Form fields here
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Pay Order" class="btn btn-success" />
        </div>
    </div>
}